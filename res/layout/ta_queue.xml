<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/taovedrlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/lightbackground"
        android:visibility="invisible" >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true" />
    </RelativeLayout>
   <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="35sp"
    android:gravity="center_vertical"
    android:background="@drawable/headfill">
 
        <ImageView
        	android:id="@+id/schools_header"
        	android:background="@drawable/icon"
        	android:layout_width="wrap_content"
        	android:contentDescription="@string/logo"
        	android:gravity="left"
        	android:layout_height="wrap_content" />
 		<TextView
	            android:id="@+id/schools_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="left|center_vertical"
	            android:paddingLeft="5sp"
	            android:textSize="16sp"
	            android:textStyle="bold"
	            android:textColor="#ffffff"
	            android:text="@string/app_name" />
 		<LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        >
         <Button 
 		    android:id="@+id/button_ta_queue_frozen"
 		    android:background="@drawable/button1"
 		    android:layout_width="wrap_content"
	        android:layout_height="25sp"
	        android:textSize="8sp"
	        android:textStyle="bold"
	        android:paddingLeft="2sp"
	        android:paddingRight="2sp"
	        android:visibility="gone"
	        android:textColor="#000000"
	        />
        <Button 
 		    android:id="@+id/button_ta_queue_active"
 		    android:background="@drawable/button1"
 		    android:layout_width="wrap_content"
	        android:layout_height="25sp"
	        android:textSize="8sp"
	        android:textStyle="bold"
	        android:paddingLeft="2sp"
	        android:paddingRight="2sp"
	        android:visibility="gone"
	        android:textColor="#000000"/>

 		<Button 
 		    android:id="@+id/button_ta_queue_logout"
 		    android:background="@drawable/button1"
 		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="11sp"
	        android:textStyle="bold"
	        android:paddingLeft="2sp"
	        android:paddingRight="2sp"
	        android:text="@string/logout"
	        android:textColor="#000000"
	        />
 		
 		</LinearLayout>
 	</LinearLayout>
 	
 	<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/darkbackground">
	 	<TextView
	        android:id="@+id/ta_queue_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:textSize="20sp"
	        android:textColor="@color/blue"
	        android:text="@string/choose" />
	 	
	</LinearLayout>
	<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="30sp"
    android:gravity="center_vertical"
    android:background="#323331">
	 	<TextView
	        android:id="@+id/ta_studnet_queue_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="left|center_vertical"
	        android:textSize="20sp"
	        android:textStyle="bold"
	        android:textColor="@color/green"
	        />
	 	
 		<LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="2sp"
        android:gravity="right|center_vertical"
        >
 		<Button 
 		    android:id="@+id/button_ta_queue_putback"
 		    android:background="@drawable/button1"
 		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="left"
	        android:textSize="11sp"
	        android:textStyle="bold"
	        android:paddingLeft="2sp"
	        android:paddingRight="2sp"
	        android:text="@string/putback"
	        android:textColor="#000000"
	        />
 		
	 	<Button 
 		    android:id="@+id/button_ta_queue_accept"
 		    android:background="@drawable/button1"
 		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="11sp"
	        android:gravity="right"
	        android:textStyle="bold"
	        android:paddingLeft="2sp"
	        android:paddingRight="2sp"
	        android:text="@string/accept"
	        android:textColor="#000000"
	        />
	 	</LinearLayout>
	 	
	 </LinearLayout>
	 <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323331">
		
		<ListView 
		    android:id="@+id/ta_student_queue_listview"
		    android:layout_width="fill_parent"
		    android:cacheColorHint="#00000000"
		    android:layout_height="match_parent"
		    android:background="@drawable/lightbackground">
		</ListView>

	</LinearLayout>
</LinearLayout>